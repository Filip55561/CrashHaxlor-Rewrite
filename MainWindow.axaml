<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="CrashHaxlor.MainWindow"
    Title="Crash Handler"
    CanResize="False"
    WindowStartupLocation="CenterScreen"
    MinWidth="400"
    MinHeight="400"
    Width="800" Height="800"
    Icon="/assets/crashIcon.ico"
    Background="Black">

    <Grid>
        <Image Source="avares://CrashHandler/assets/crashBG.png"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />         <!-- Text centered vertically -->
                <RowDefinition Height="Auto" />      <!-- Buttons at bottom -->
            </Grid.RowDefinitions>
            <StackPanel
            Grid.Row="0"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="40">
                <TextBlock x:Name="InfoText"
                           Foreground="White"
                           FontFamily="avares://CrashHandler/assets/permanentMarker.ttf#Permanent Marker"
                           TextWrapping="Wrap"
                           FontSize="18"
                           Margin="0,0,0,25"
                           TextAlignment="Left"/>
                <TextBlock x:Name="ReportText"
                           Foreground="White"
                           FontFamily="avares://CrashHandler/assets/permanentMarker.ttf#Permanent Marker"
                           TextWrapping="Wrap"
                           FontSize="16"
                           Margin="0,0,0,25"
                           TextAlignment="Left"/>
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20"
                        Spacing="40">
                <Button Name="RelaunchButton"
                        Content="Relaunch Game"
                        FontFamily="avares://CrashHandler/assets/phantomMuff.ttf#PhantomMuff 1.5"
                        FontSize="25"
                        Padding="20,10"
                        Click="RelaunchClicked"/>
                <Button Name="ExitButton"
                        Content="Exit"
                        FontFamily="avares://CrashHandler/assets/phantomMuff.ttf#PhantomMuff 1.5"
                        FontSize="25"
                        Padding="20,10"
                        Click="ExitClicked"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>